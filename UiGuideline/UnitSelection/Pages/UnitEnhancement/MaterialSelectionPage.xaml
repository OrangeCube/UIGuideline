<Page
    x:Class="UiGuidelineUnitSelection.Pages.UnitEnhancement.MaterialSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:c="clr-namespace:UiGuidelineUnitSelection.CommonControl"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    Title="素材選択">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="素材選択" Style="{StaticResource HeaderStyle}" />

            <StackPanel Orientation="Horizontal">
                <Button x:Name="ReturnButton" Content="戻る" />
                <Button x:Name="EnhanceButton" Content="合成" />
            </StackPanel>
        </StackPanel>

        <c:UnitListControl x:Name="List" Grid.Row="1" />
    </Grid>
</Page>
